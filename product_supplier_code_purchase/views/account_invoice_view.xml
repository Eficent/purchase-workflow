<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_purchase" model="ir.ui.view">
        <field name="name">account.move.inherit.purchase</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="after">
                <field name="product_supplier_code" attrs="{'column_invisible': [('parent.type', '!=', 'in_invoice')]}"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='product_id']" position="after">
                <field name="product_supplier_code" attrs="{'column_invisible': [('parent.type', '!=', 'in_invoice')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
